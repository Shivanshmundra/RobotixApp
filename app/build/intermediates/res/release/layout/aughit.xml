<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:background="#ffffff" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/au_b" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                style="@style/heading4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:text="Category of event: COMPUTER VISION" />

            <TextView
                android:id="@+id/textView2"
                style="@style/heading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="&quot;Build an Image Processing robot which can play the Break Bricks game in a virtual arena.&quot;"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:gravity="center"
            style="@style/EventFooter"
            android:paddingTop="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="5dip" >

            <ImageView
                android:id="@+id/www"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dip"
                android:src="@drawable/www" />

            <ImageView
                android:id="@+id/pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dip"
                android:src="@drawable/pdf" />

            <ImageView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dip"
                android:src="@drawable/phone" />

            <ImageView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:src="@drawable/location" />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                style="@style/heading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:text="For all those who always had a soft corner for using robotics for fun, Technology Robotix Society presents brings its Computer Vision Event AugHit. This event is a giant leap towards the mainstream integration of the virtual and real world, with augmented reality being implemented in a robotics event for the first time. The participant's robot is to play a virtual Arcanoid (Brick Breaker) game, while being present in the real world. A perfect blend of the virtual and real worlds, this first of its kind event is sure to enthrall one and all." />

        </LinearLayout>

    </LinearLayout>
</ScrollView><!-- From: file:/C:/Users/acer/AndroidStudioProjects/RobotixApp1/app/src/main/res/layout/aughit.xml -->