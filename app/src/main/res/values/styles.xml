<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>



    <style name="ContactDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/ContactDialogTitle</item>
    </style>

    <style name="ContactDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Fragment">
        <item name="android:padding">10dp</item>
    </style>

    <style name="container">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Text">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeadingText" parent="Text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SummaryText" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="SummaryTitle" parent="HeadingText">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="Image">
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="SummaryImage" parent="Image">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="noAnimTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <color name="black">#000000</color>
    <color name="contact">#00E5EE</color>
    <style name="heading">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#0a1c29</item>
    </style>

    <style name="heading1">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#0a1c29</item>
    </style>

    <style name="heading2">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="heading3">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="heading4">
        <item name="android:textColor">#353535</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="notif">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#0a1c29</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="ActionBarCompat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#0a1c29</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0a1c29</item>
        <item name="android:background">@null</item>
    </style>

    <style name="FooterBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#0a1c29</item>
    </style>

    <style name="EventFooter">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#ffffff</item>
    </style>

</resources>